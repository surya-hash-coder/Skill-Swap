rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read and write their own user profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Allow users to read other user profiles for matching (but not write)
      allow read: if request.auth != null;
    }
    
    // Sessions rules
    match /sessions/{sessionId} {
      // Users can read sessions they are participants in
      allow read, update: if request.auth != null && 
        request.auth.uid in resource.data.participants;
      
      // Users can create sessions where they are a participant
      allow create: if request.auth != null && 
        request.auth.uid in request.resource.data.participants;
      
      // Users can update sessions they created or are participants in
      allow update: if request.auth != null && 
        (request.auth.uid == resource.data.createdBy || 
         request.auth.uid in resource.data.participants);
    }
    
    // Chat rules
    match /chats/{chatId} {
      // Users can only access chats they are part of
      allow read, write: if request.auth != null && 
        request.auth.uid in chatId;
    }
    
    match /chats/{chatId}/messages/{messageId} {
      // Users can read messages if they are part of the chat
      allow read: if request.auth != null && 
        request.auth.uid in chatId;
      
      // Users can create messages if they are part of the chat and are the sender
      allow create: if request.auth != null && 
        request.auth.uid in chatId &&
        request.auth.uid == request.resource.data.senderId;
      
      // Users can update message read status if they are part of the chat
      allow update: if request.auth != null && 
        request.auth.uid in chatId &&
        request.auth.uid != resource.data.senderId;
    }
  }
}